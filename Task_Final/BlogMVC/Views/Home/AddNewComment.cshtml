@model BlogMVC.BlogDAL.Entities.Comment
@{
    ViewBag.Title = "AddNewComment";
}

<h2>AddNewComment</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Напишите комментарий</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CommentText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CommentText)
            @Html.ValidationMessageFor(model => model.CommentText)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}